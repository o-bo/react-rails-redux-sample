<h2>Log in</h2>

<%= render partial: 'layouts/alerts' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="user[email]">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="user[password]">
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
    <label>
      <input type="checkbox" name="user[remember_me]"> Remember me
    </label>
  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
